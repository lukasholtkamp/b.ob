<launch>
	<!-- joy node -->
	<node respawn="false" pkg="joy" type="joy_node" name="BobCore" required="true" >
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="deadzone" value="0.12" />
		<param name="default_trig_val" value="true" />
		<param name="autorepeat_rate" value="0" />
		<param name="sticky_buttons" value="false" />
	</node>
	
	<!-- Axes -->
	<param name="axis_linear" value="1" type="int" />
	<param name="axis_angular" value="0" type="int" />
	<param name="scale_linear" value="1" type="double" />
	<param name="scale_angular" value="1" type="double" />
	
	<!-- Buttons -->
	<param name="b_button" value="1" type="int" />
	<param name="y_button" value="1" type="int" />
	
	<node pkg="bob" type="XBoxController" name="xbox" respawn="false" respawn_delay="3" />
		<param name="default_trig_val" value="true" />
		<param name="autorepeat_rate" value="0" />

	<node pkg="bob" type="RunMotor" name="runMotor" output="screen" />
		<param name="default_trig_val" value="true" />
</launch>
