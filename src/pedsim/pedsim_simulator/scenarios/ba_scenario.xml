<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <!-- Waypoints -->
    <!-- Agent 1 waypoints -->
    <waypoint id="wp_agent1_start" x="-6" y="-9" r="0.25"/>
    <waypoint id="wp_agent1_mid1" x="-3" y="7" r="0.25"/>
    <waypoint id="wp_agent1_mid2" x="1" y="7" r="0.25"/>
    
    <!-- Agent 2 waypoints -->
    <waypoint id="wp_agent2_start" x="-6" y="13" r="0.25"/>
    <waypoint id="wp_agent2_mid1" x="6" y="9" r="0.25"/>
    <waypoint id="wp_agent2_mid2" x="6" y="6" r="0.25"/>
    
    <!-- Agent 3 waypoints -->
    <waypoint id="wp_agent3_start" x="0" y="-9" r="0.25"/>
    <waypoint id="wp_agent3_mid1" x="7" y="-9" r="0.25"/>
    <waypoint id="wp_agent3_mid2" x="7" y="-1" r="0.25"/>
    <waypoint id="wp_agent3_mid3" x="0" y="-1" r="0.25"/>

    <!-- Random waypoints for Agent 4 (avoiding (0,0)) -->
    <waypoint id="wp_agent4_1" x="2" y="-7" r="0.25"/>
    <waypoint id="wp_agent4_2" x="5" y="-4" r="0.25"/>
    <waypoint id="wp_agent4_3" x="-1" y="-3" r="0.25"/>
    <waypoint id="wp_agent4_4" x="3" y="2" r="0.25"/>
    <waypoint id="wp_agent4_5" x="6" y="1" r="0.25"/>
    
    <!-- Random waypoints for Agent 5 (avoiding (0,0)) -->
    <waypoint id="wp_agent5_1" x="4" y="-8" r="0.25"/>
    <waypoint id="wp_agent5_2" x="1" y="-5" r="0.25"/>
    <waypoint id="wp_agent5_3" x="6" y="-2" r="0.25"/>
    <waypoint id="wp_agent5_4" x="2" y="4" r="0.25"/>
    <waypoint id="wp_agent5_5" x="-1" y="8" r="0.25"/>

    <!-- Agents -->
    <!-- Agent 1 -->
    <agent x="-6" y="-9" n="1" dx="0" dy="0" type="0">
        <addwaypoint id="wp_agent1_start"/>
        <addwaypoint id="wp_agent1_mid1"/>
        <addwaypoint id="wp_agent1_mid2"/>
        <addwaypoint id="wp_agent1_mid1"/>
        <addwaypoint id="wp_agent1_start"/>
    </agent>

    <!-- Agent 2 -->
    <agent x="-6" y="13" n="1" dx="0" dy="0" type="0">
        <addwaypoint id="wp_agent2_start"/>
        <addwaypoint id="wp_agent2_mid1"/>
        <addwaypoint id="wp_agent2_mid2"/>
        <addwaypoint id="wp_agent2_mid1"/>
        <addwaypoint id="wp_agent2_start"/>
    </agent>

    <!-- Agent 3 -->
    <agent x="0" y="-9" n="1" dx="0" dy="0" type="0">
        <addwaypoint id="wp_agent3_start"/>
        <addwaypoint id="wp_agent3_mid1"/>
        <addwaypoint id="wp_agent3_mid2"/>
        <addwaypoint id="wp_agent3_mid3"/>
        <addwaypoint id="wp_agent3_start"/> <!-- Loop back to start -->
    </agent>

    <!-- Agent 4 (Random movement) -->
    <agent x="2" y="-7" n="1" dx="0" dy="0" type="0">
        <addwaypoint id="wp_agent4_1"/>
        <addwaypoint id="wp_agent4_2"/>
        <addwaypoint id="wp_agent4_3"/>
        <addwaypoint id="wp_agent4_4"/>
        <addwaypoint id="wp_agent4_5"/>
        <addwaypoint id="wp_agent4_1"/> <!-- Loop back to start -->
    </agent>

    <!-- Agent 5 (Random movement) -->
    <agent x="4" y="-8" n="1" dx="0" dy="0" type="0">
        <addwaypoint id="wp_agent5_1"/>
        <addwaypoint id="wp_agent5_2"/>
        <addwaypoint id="wp_agent5_3"/>
        <addwaypoint id="wp_agent5_4"/>
        <addwaypoint id="wp_agent5_5"/>
        <addwaypoint id="wp_agent5_1"/> <!-- Loop back to start -->
    </agent>
</scenario>
