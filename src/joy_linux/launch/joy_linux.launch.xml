<launch>
    <node pkg="joy_linux" exec="joy_linux_node" output="screen"/>
    <node pkg="joy_linux" exec="sub_node" output="screen" />
    <!--
    <node pkg="joy" exec="joy_node" output="screen" > 
        <param from="$(find-pkg-share joy_linux)/config/BasicDrive.yaml" />
    </node>
    -->
    <node pkg="teleop_twist_joy" exec="teleop_node" name="teleop_node" output="screen" >
        <param name="axis_linear" value="4"/>
        <param name="scale_linear" value="0.5"/>
        <param name="scale_linear_turbo" value="1.0"/>
        <param name="axis_angular" value="0"/>
        <param name="scale_angular" value="0.5"/>
        <param name="scale_angular_turbo" value="1.0"/>
        <param name="enable_button" value="6"/>
        <param name="enable_button_turbo" value="5"/>
    </node>
</launch>